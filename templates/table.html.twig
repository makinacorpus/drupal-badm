<table{{ attributes|attributes }}>

  {% if caption %}
    <caption>
      {{ caption }}
    </caption>
  {% endif %}

  {% if colgroups %}
    {% for colgroup in colgroups %}
      {% if colgroup is iterable %}
        <colgroup{{ colgroups_attributes[loop.index0]|attributes }}>
          {% for col in colgroup %}
            <col{{ col|attributes }}/>
          {% endfor %}
        </colgroup>
      {% else %}
        <colgroup{{ colgroups_attributes[loop.index0]|attributes }}></colgroup>
      {% endif %}
    {% endfor %}
  {% endif %}

  {% if header|length %}
    <thead>
      <tr>
        {% for cell in header %}
          <th{{ header_attributes[loop.index0]|attributes }}>
            {{ cell }}
          </th>
        {% endfor %}
      </tr>
    </thead>
  {% endif %}

  {% if rows|length %}
    <tbody>
      {% for row in rows %}
        {% if row|length %}
          <tr{{ rows_attributes[loop.index0]|attributes }}>
            {% for cell in row %}
              <td{{ cells_attributes[loop.parent.loop.index0][loop.index0]|attributes }}>
                {{ cell }}
              </td>
            {% endfor %}
          </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  {% endif %}
</table>
